<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_root"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <include layout="@layout/standard_header_no_action"/>

        <LinearLayout
			android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
			android:layout_gravity="center"
            >

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="@dimen/no_scale_0_pix"
				android:layout_weight="45"
				>

				<Button
					android:id="@+id/web_cam_button"
					style="@style/homescreen_button"
					android:text="@string/web_cam"
					/>

				<Button
					android:id="@+id/reservations_button"
					style="@style/homescreen_button"
					android:text="@string/reservations"
					/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="@dimen/no_scale_0_pix"
				android:layout_weight="45"
				android:layout_gravity="center"
				>

				<Button
					android:id="@+id/settings_button"
					style="@style/homescreen_button"
					android:text="@string/preferences"
					/>

			</LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

