<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/lucky_paws_light_blue" />
			<stroke android:width="@dimen/scalable_1_pix" android:color="@color/lucky_paws_blue" />
			<corners android:radius="@dimen/scalable_3_pix" />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/lucky_paws_light_blue" />
			<stroke android:width="@dimen/scalable_1_pix" android:color="@color/lucky_paws_blue" />
			<corners android:radius="@dimen/scalable_3_pix" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/lucky_paws_blue" />
			<corners android:radius="@dimen/scalable_3_pix" />
		</shape>
	</item>
</selector>