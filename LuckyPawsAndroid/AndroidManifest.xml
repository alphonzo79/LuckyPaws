<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luckypawsdaycare"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8"
        android:targetSdkVersion="16"
        />

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application android:label="@string/app_name">
        <activity android:name=".activities.MainScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

		<activity android:name=".activities.WebCamViewScreen"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.Light.NoTitleBar"
			android:configChanges="orientation"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
				<action android:name="android.intent.action.PICK" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".activities.ReservationsScreen"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.Light.NoTitleBar"
			android:configChanges="orientation"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
				<action android:name="android.intent.action.PICK" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".activities.SettingsScreen"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.Light.NoTitleBar"
			android:configChanges="orientation"
			>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<action android:name="android.intent.action.EDIT" />
				<action android:name="android.intent.action.PICK" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
    </application>
</manifest> 
